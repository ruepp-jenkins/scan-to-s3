# Authentication
AUTH_USERNAME=admin
AUTH_PASSWORD_HASH=<bcrypt-hash-here>
JWT_SECRET=<random-32+-char-string>
JWT_EXPIRES_IN=24h

# S3-compatible Storage (Mega.nz S4)
